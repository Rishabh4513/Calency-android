<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/b7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:text="7"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/b8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/b7"
        android:layout_toEndOf="@+id/b7"
        android:text="8"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/b9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/b6"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/b8"
        android:text="9"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b7"
        android:layout_alignStart="@+id/b7"
        android:text="4"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/b5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b7"
        android:layout_toEndOf="@+id/b7"
        android:text="5"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/b6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b7"
        android:layout_toEndOf="@+id/b8"
        android:text="6"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b4"
        android:layout_alignStart="@+id/b7"
        android:text="1"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b4"
        android:layout_toEndOf="@+id/b7"
        android:text="2"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b4"
        android:layout_toEndOf="@+id/b8"
        android:text="3"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/bdiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/b7"
        android:layout_toEndOf="@+id/b9"
        android:text="/"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/bmul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b7"
        android:layout_toEndOf="@+id/b9"
        android:text="*"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/badd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b4"
        android:layout_toEndOf="@+id/b9"
        android:text="+"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/bclr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b1"
        android:layout_alignStart="@+id/b7"
        android:text="Clear"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/b0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b1"
        android:layout_toEndOf="@+id/b7"
        android:text="0"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/bsub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b1"
        android:layout_toEndOf="@+id/b8"
        android:text="-"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/bequals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b1"
        android:layout_toEndOf="@+id/b9"
        android:text="="
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tvDisp"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bdiv"
        android:layout_alignParentTop="true"
        android:layout_marginTop="180dp"
        android:textSize="40dp"/>

    <TextView
        android:id="@+id/tvRes"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bdiv"
        android:layout_alignParentTop="true"
        android:layout_marginTop="134dp"
        android:textSize="40dp"/>

    <TextView
        android:id="@+id/linkGitHub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bdiv"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:text="@string/linktoGithub" />

    <Button
        android:id="@+id/bconvert"
        android:layout_width="352dp"
        android:layout_height="43dp"
        android:layout_below="@+id/bclr"
        android:layout_alignStart="@+id/tvDisp"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="0dp"
        android:text="Convert" />

    <TextView
        android:id="@+id/tvusd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/b7"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        android:text="USD"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tveur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvusd"
        android:layout_alignParentTop="true"
        android:layout_marginStart="78dp"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/tvusd"
        android:layout_toRightOf="@+id/tvusd"
        android:text="EUR"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvpound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvusd"
        android:layout_alignParentTop="true"
        android:layout_marginStart="78dp"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/tveur"
        android:layout_toRightOf="@+id/tveur"
        android:text="GBP"
        android:textSize="20dp" />

</RelativeLayout>